class UserController < ApplicationController
  def new
    @user = User.new
  end

  def create
    @user = User.new(user_params)
    if @user.save
      session[:user_id] = @user.id # creates a new session for the user
      redirect_to '/'
    else
      redirect_to '/signup'
    end
  end

  def edit
  end

  def destroy
  end

  private
  
  def user_params
    params.require(:user).permit(:user_name, :first_name, :last_name, :email, :password)
end
