<%= form_for(@guest) do |f| %>
  <% if @guest.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@guest.errors.count, "error") %> prohibited this guest from being saved:</h2>

      <ul>
      <% @guest.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <b><%= 'First Name' %></b><br>
  <%= f.text_field :first_name %><br>
  <b><%= 'Last Name' %></b><br>
  <%= f.text_field :last_name %>
  <%= f.label :major %><br>
  <%= f.select(:major) do %>
    <% @majors.each do |c| %>
      <%= content_tag(:option, c, value: c) %>
    <% end %>
  <% end %>
  <b><%= 'Graduation Date' %></b><br>
  <%= f.select(:grad_season) do %>
    <% @grad_season.each do |c| %>
      <%= content_tag(:option, c, value: c) %>
    <% end %>
  <% end %>
  <%= f.select(:grad_year) do %>
    <% @grad_year.each do |c| %>
      <%= content_tag(:option, c, value: c) %>
    <% end %>
  <% end %><br>
  <b><%= 'Email' %></b> <%= 'UNCC studnet emails only (****@uncc.edu)' %><br>
  <%= f.text_field :email %>
  <b><%= 'Phone Number' %></b><br>
  <%= f.telephone_field :phone_number %>
  <%= f.label :message %><br>
  <%= f.text_area :message, size: "24x5" %><br><br>
  <%= f.submit 'Send Message' %>
<% end %>
