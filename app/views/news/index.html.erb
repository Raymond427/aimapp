<%= render 'shared/header'%>
<header>
  <h1>
    News
  </h1>
  <p>
    See what AIM&#39;s been up to!
  </p>
</header>
<main>
<%= link_to 'Post an Update', new_news_path %></br>
<% @news.each do |news| %>
  <section class="news">
    <figure>
      <img src= <%= news.thumburl %> />
      <figcaption>
        <p>
          <h1><%= news.title %></h1>
        </p>
        <p>
          <%= news.date %>
        </p>
        <p>
          <%= news.description %>
        </p>
        <%= link_to 'Show', news %>
        <%= link_to 'Edit', edit_news_path(news) %>
        <%= link_to 'Destroy', news, method: :delete, data: { confirm: 'Are you sure you want to delete ' + news.title + '?'}%>
      </figcaption>
    </figure>
  </section>
<% end %>
</main>

