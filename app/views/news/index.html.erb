<header>
  <h1>
    News
  </h1>
  <h3>
    See what AIM&#39;s been up to!
  </h3>
</header>
<main>
    <div class="RECESS">
      <div class="shade">
        <h1>INSPIRATION. INNOVATION. CELEBRATION.</h1>
        <h2>Entreprenurial Music Festival RECESS is coming to Charlotte</h2>
        <h2>October, 7th 2015</h2>
        <%= button_to "Learn More", {:controller => :pages, :action => :recess}, {:method => :get } %>
      </div>
    </div>
<% if current_user && current_user.editor? || current_user && current_user.admin? %>
  <%= button_to "Post an Update", new_news_path, :class => "button", :method => :get  %></br>
<% end %>
<% @news.each do |news| %>
  <section class="news">
    <figure>
      <% if news.mediatype == 'Image' %>
        <img src= <%= news.thumburl %> />
      <% elsif news.mediatype == 'Video' %>
        <iframe src=<%= news.thumburl %> frameborder="0" allowfullscreen></iframe>
      <% end %>
      <figcaption>
        <p>
          <h1><%= news.title %></h1>
        </p>
        <p>
          <%= news.date %>
        </p>
        <p>
          <%= news.description %>
        </p>
        <% if current_user && current_user.editor? || current_user && current_user.admin? %>
          <!--<%= link_to 'Show', news %> -->
          <%= link_to 'Edit', edit_news_path(news) %>
        <% end %>
          <% if current_user && current_user.admin? %>
          <%= link_to 'Delete', news, method: :delete, data: { confirm: 'Are you sure you want to delete ' + news.title + '?'}%>
        <% end %>
      </figcaption>
    </figure>
  </section>
<% end %>
</main>

