<%= form_for(@news) do |news| %>
  <%= news.label :title %><br>
  <%= news.text_field :title %><br>
  <%= news.label :date %><br>
  <%= news.text_field :date %><br>
  <%= news.label :thumburl %><br>
  <%= news.text_area :thumburl %><br>
  <%= news.label :description %><br>
  <%= news.text_area :description %><br>
  <br><%= news.submit, controller => :executives, :action => :executives %>
  <%= button_to "Cancel", :controller => :news, :action => :index %>
<% end %>
