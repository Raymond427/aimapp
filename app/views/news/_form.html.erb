<%= form_for(@news) do |news| %>
  <%= news.label :title %><br>
  <%= news.text_field :title %><br>
  <%= news.label :date %><br>
  <%= news.text_field :date %><br>
  <%= news.radio_button :mediatype, 'Image' %><%= news.label :mediatype, 'Image' %>
  <%= news.radio_button :mediatype, 'Video' %><%= news.label :mediatype, 'Video' %><br/>
  <b>Put the Image URL, or the YouTube video URL here:</b></br>
  <%= news.text_area :thumburl %><br>
  <%= news.label :description %><br>
  <%= news.text_area :description %><br>
  <br><%= news.submit %>
  <%= link_to "Cancel", '/news' %>
<% end %>
