<%= form_for(@news) do |news| %>
  <%= news.label :title %><br>
  <%= news.text_field :title %><br>
  <%= news.label :date %><br>
  <%= news.text_field :date %><br>
  This news post has a:</br>
  Image <%= radio_button_tag :mediatype, 'Image' %>
  Video <%= radio_button_tag :mediatype, 'Video' %></br>
  <b>Put the Image URL here, or put the embedded YouTube video here:</b></br>
  <%= news.text_area :thumburl %><br>
  <%= news.label :description %><br>
  <%= news.text_area :description %><br>
  <br><%= news.submit %>
  <%= link_to "Cancel", '/news' %>
<% end %>
