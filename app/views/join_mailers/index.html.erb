<p id="notice"><%= notice %></p>

<h1>Listing Join Mailers</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone number</th>
      <th>Major</th>
      <th>Grad date</th>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @join_mailers.each do |join_mailer| %>
      <tr>
        <td><%= join_mailer.first_name %></td>
        <td><%= join_mailer.last_name %></td>
        <td><%= join_mailer.email %></td>
        <td><%= join_mailer.phone_number %></td>
        <td><%= join_mailer.major %></td>
        <td><%= join_mailer.grad_date %></td>
        <td><%= join_mailer.message %></td>
        <td><%= link_to 'Show', join_mailer %></td>
        <td><%= link_to 'Edit', edit_join_mailer_path(join_mailer) %></td>
        <td><%= link_to 'Destroy', join_mailer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

